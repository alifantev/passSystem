@model PassSystem.BackOffice.Web.Models.PaginationModel

<input type="hidden" id="currentPage" value="@Model.ActivePage"/>

@if (Model.PagesCount > 0)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item" onclick="changePage('@(Model.ActivePage > 1 ? Model.ActivePage - 1 : 1)')">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                <li class="page-item @(Model.ActivePage == i ? "active" : "")" onclick="changePage('@i')">
                    <a class="page-link" href="#">@i</a>
                </li>
            }
        
            <li class="page-item" onclick="changePage('@(Model.ActivePage < Model.PagesCount ? Model.ActivePage + 1 : Model.ActivePage)')">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
}


